[Unit]
Description="Proxy Agent"
After=network.target

[Service]
User=root
Group=root
Environment="RUST_LOG={{ log_level }}"
ExecStartPre=/usr/bin/touch /var/log/proxy-agent.log
ExecStartPre=/bin/chown root:root /var/log/proxy-agent.log
ExecStart=/usr/sbin/proxy-agent
Nice=5
KillSignal=TERM
Restart=on-failure
RestartSec=30
TimeoutStopSec=60
StandardOutput=syslog
StandardError=syslog
PermissionsStartOnly=true
LimitNOFILE=262144

[Install]
WantedBy=multi-user.target